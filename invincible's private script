local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library/main/Library", true))()

local window = library:AddWindow("invincibles priv script", {
    main_color = Color3.fromRGB(0, 0, 0),
    min_size = Vector2.new(470, 470),
    can_resize = false,
})

local main = window:AddTab("Main")
local Tools = main:AddFolder("Tools")

-- Auto Pushups (reps via muscleEvent)
Tools:AddSwitch("Auto Pushups", function(state)
    _G.AutoPushups = state
    
    if _G.AutoPushups then
        task.spawn(function()
            while _G.AutoPushups do
                local player = game.Players.LocalPlayer
                local character = player.Character or player.CharacterAdded:Wait()
                
                -- Auto-equip if in backpack
                local pushupsTool = player.Backpack:FindFirstChild("Pushups") or character:FindFirstChild("Pushups")
                if pushupsTool and pushupsTool.Parent == player.Backpack then
                    character.Humanoid:EquipTool(pushupsTool)
                end
                
                -- Fire rep (most common training remote arg)
                if player:FindFirstChild("muscleEvent") then
                    player.muscleEvent:FireServer("rep")
                end
                
                task.wait(0.01)  -- fast but usually safe from kick
            end
        end)
    end
end)

-- Fast Punch (spam punch + set attackTime low)
Tools:AddSwitch("Fast Punch", function(state)
    _G.FastPunch = state
    
    if _G.FastPunch then
        -- Reduce attack cooldown once
        task.spawn(function()
            while _G.FastPunch do
                local player = game.Players.LocalPlayer
                local punch = player.Backpack:FindFirstChild("Punch") or (player.Character and player.Character:FindFirstChild("Punch"))
                if punch and punch:FindFirstChild("attackTime") then
                    punch.attackTime.Value = 0
                end
                task.wait(0.4)
            end
        end)
        
        -- Spam punch activation + remote
        task.spawn(function()
            while _G.FastPunch do
                local player = game.Players.LocalPlayer
                local character = player.Character
                
                if player:FindFirstChild("muscleEvent") then
                    player.muscleEvent:FireServer("punch", "rightHand")
                    player.muscleEvent:FireServer("punch", "leftHand")
                end
                
                if character and character:FindFirstChild("Punch") then
                    character.Punch:Activate()
                end
                
                task.wait(0.07)  -- very fast — adjust to 0.1–0.15 if kick occurs
            end
        end)
    end
end)

-- Auto Weight (lift reps — very similar to pushups)
Tools:AddSwitch("Auto Weight", function(state)
    _G.AutoWeight = state
    
    if _G.AutoWeight then
        task.spawn(function()
            while _G.AutoWeight do
                local player = game.Players.LocalPlayer
                local character = player.Character or player.CharacterAdded:Wait()
                
                -- Auto-equip Weight tool
                local weightTool = player.Backpack:FindFirstChild("Weight") or character:FindFirstChild("Weight")
                if weightTool and weightTool.Parent == player.Backpack then
                    character.Humanoid:EquipTool(weightTool)
                end
                
                -- Fire rep event
                if player:FindFirstChild("muscleEvent") then
                    player.muscleEvent:FireServer("rep")
                end
                
                task.wait(0.01)
            end
        end)
    else
        -- Optional: unequip when turned off
        local character = game.Players.LocalPlayer.Character
        if character then
            local equipped = character:FindFirstChildOfClass("Tool")
            if equipped and equipped.Name == "Weight" then
                equipped.Parent = game.Players.LocalPlayer.Backpack
            end
        end
    end
end)
